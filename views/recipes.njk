{% extends 'layout.njk' %}

{% block title %}
<title>Foodfy - Receitas</title>
{% endblock %}

{% block header %}
<a href="/about">Sobre</a>
<a href="/recipes"><strong>Receitas</strong></a>
{% endblock %}

{% block content %}
<section class="mostAccessed">
    <div class="recipes">
        {% for recipe in recipes %}
        <article class="recipe" id="{{loop.index0}}">
            <div class="recipeImage">
                <img src="{{recipe.image}}" alt="">
            </div>
            <div class="recipeInfo">
                <h3>{{recipe.title}}</h3>
                <p>por {{recipe.author}}</p>
            </div>
        </article>
        {% endfor %}
    </div>
</section>
{% endblock %}

{% block script %}
<script src="/scripts.js"></script>
{% endblock %}